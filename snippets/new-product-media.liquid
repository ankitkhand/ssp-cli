{%- case media.media_type -%}
    {%- when 'image' -%}
        <img src="{{ media | img_url: 'large' }}" alt="{{ media.preview_image.alt }}" class="product-img">
    {%- when 'external_video' -%}
        {{ media | external_video_tag: class: 'product_video' }}
    {%- when 'video' -%}
        {{ media | video_tag: controls: true, class: 'product_single_video'}}
    {%- when 'model' -%}
        {{ media | model_viewer_tag }}    
    {%- else -%}
        {{ media | media_tag }}
{%- endcase -%}